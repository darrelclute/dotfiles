#!/bin/bash

case "${1}" in
    mom)
        PAN="32"
        TILT="0"
        ZOOM="64"
        ;;
    seat1)
        PAN="-24"
        TILT="-4"
        ZOOM="64"
        ;;
    seat2)
        PAN="-12"
        TILT="-4"
        ZOOM="64"
        ;;
    seat3)
        PAN="0"
        TILT="-4"
        ZOOM="64"
        ;;
    seat4)
        PAN="14"
        TILT="-4"
        ZOOM="64"
        ;;
    seat5)
        PAN="24"
        TILT="-4"
        ZOOM="64"
        ;;
    seat6)
        PAN="16"
        TILT="0"
        ZOOM="64"
        ;;
    home)
        PAN="0"
        TILT="6"
        ZOOM="6"
        ;;
    fish)
        PAN="-61"
        TILT="0"
        ZOOM="6"
        ;;
    sleep)
        PAN="-170"
        TILT="-30"
        ZOOM="0"
        ;;
esac

v4l2-ctl -d /dev/v4l/by-id/usb-USB2.0_Camera_USB2.0_Camera_35060591-video-index0 -c pan_absolute=$(echo 3600*${PAN} | bc),tilt_absolute=$(echo 3600*${TILT} | bc),zoom_absolute=${ZOOM}