#!/bin/bash


DO_CMD="ydotool key"
MSG_CMD="swaymsg"

$MSG_CMD [class='zoom' title='Meeting'] focus

case "${1}" in
    mute)
        ${DO_CMD} alt+a
        ;;
    camera)
        ${DO_CMD} alt+n
        ;;
    video)
        ${DO_CMD} alt+v
        ;;
    fullscreen)
        ${DO_CMD} super+f
        ;;
esac

$MSG_CMD [class='zoom' title='Participant'] focus